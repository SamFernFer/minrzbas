[
    {
        "title": "Default Classes"
    },
    {
        "in": [
            "-Ipath/to/thing:re.fullmatch('.*\\\\.', relName)",
            "-Sother:cond"
        ],
        "out": [
            // Yes, you need 4 backslashes to send only one through 2 layers of string.
            [ "include", "path/to/thing", "re.fullmatch('.*\\\\.', relName)" ],
            [ "src", "other", "cond" ]
        ]
    },
    {
        "in": [
            "-Ia",
            "-Sb"
        ],
        "out": [
            [ "include", "a", "" ],
            [ "src", "b", "" ]
        ]
    },
    {
        "in": [
            "-Ia", "-Ib", "-Ic", "-Ia\":\"mu",
            "-Sb", "-Sc"
        ],
        "out": [
            [ "include", "a", "" ],
            [ "include", "b", "" ],
            [ "include", "c", "" ],
            [ "include", "a\"", "\"mu" ],
            [ "src", "b", "" ],
            [ "src", "c", "" ]
        ]
    }
]